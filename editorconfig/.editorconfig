# EditorConfig is awesome:Â [https://EditorConfig.org](https://editorconfig.org/)

# top-most EditorConfig file  
root = true

[*]  
indent_style = space  
indent_size = 4  
end_of_line = lf  
charset = utf-8  
trim_trailing_whitespace = true  
insert_final_newline = true

[*.{yml,yaml,toml}]  
indent_style = space  
indent_size = 2

[*.json]  
indent_style = space  
indent_size = 2

[*.py]  
indent_style = space  
indent_size = 4

[*.{ts,tsx}]  
indent_style = space  
indent_size = 2
